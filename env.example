# ========================================
# WhatsApp E-commerce Automation System
# Environment Variables for Railway
# ========================================

# Redis Configuration (Railway will provide this)
REDIS_URL=redis://default:password@redis-service:6379

# Google Sheets Configuration
GOOGLE_SPREADSHEET_ID=your_google_sheets_id_here
GOOGLE_SERVICE_ACCOUNT_KEY={"type":"service_account","project_id":"your-project-id",...}

# Application Configuration
NODE_ENV=production
PORT=3000

# Optional: Custom Configuration
APP_NAME=WhatsApp E-commerce Automation
APP_VERSION=1.0.0

# Security (Railway handles HTTPS automatically)
FORCE_HTTPS=true

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=/tmp/whatsapp-session
WHATSAPP_TIMEOUT=60000

# Message Queue Configuration
QUEUE_CONCURRENCY=1
QUEUE_DELAY=1000

# Automation Settings
AUTOMATION_INTERVAL=30000
REMINDER_DELAY_HOURS=24
REJECTED_OFFER_DELAY_HOURS=24 